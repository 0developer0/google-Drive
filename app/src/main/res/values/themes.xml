<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Drive" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/blue_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="Fab_Menu" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="backgroundTint">@color/blue_500</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="titleTextColor">@color/blue_500</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_blue</item>
    </style>
</resources>